from telebot import types
import telebot
token = '7995506038:AAH8CD4ZxL3fn7-rPmDNc-gwu5BwuQdSXD4'
bot = telebot.TeleBot(token, parse_mode = 'html')

@bot.message_handler(commands = ['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("–ü–µ—Ä–µ–π—Ç–∏ –∫ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏—é ·Øì‚òÖ")
    btn2 = types.KeyboardButton("–û–±—Ä–∞—Ç–Ω–∞—è —Å–≤—è–∑—å ‚ãÜÀöüêæÀñ¬∞")
    btn3 = types.KeyboardButton("–ü—Ä–æ–π–¥–µ–Ω–Ω—ã–µ —Ç–µ—Å—Ç—ã –∏ –≤–∏–∫—Ç–æ—Ä–∏–Ω—ã ‡≠®‡ßé")
    markup.add(btn1, btn2, btn3)
    bot.send_message(message.chat.id, text="–ü—Ä–∏–≤–µ—Ç! –í—ã–±–µ—Ä–∏ –Ω—É–∂–Ω—É—é –ø–æ–∑–∏—Ü–∏—é –≤ –º–µ–Ω—é –Ω–∏–∂–µ ‚ÅÄ‚û¥", reply_markup=markup)

@bot.message_handler(content_types=["text"])
def answer_btn(message):
    if message.text == "–ü–µ—Ä–µ–π—Ç–∏ –∫ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏—é ·Øì‚òÖ":
        button1 = types.InlineKeyboardButton("êôö–≤–∏–∫—Ç–æ—Ä–∏–Ω—ã", callback_data='–≤–∏–∫—Ç–æ—Ä–∏–Ω—ã')
        button2 = types.InlineKeyboardButton("êôö—Ç–µ—Å—Ç—ã", callback_data = '—Ç–µ—Å—Ç—ã')
        keyboard = [[button1, button2]]
        markup = types.InlineKeyboardMarkup(row_width=3)
        markup.add(button1)
        markup.add(button2)
        bot.send_message(message.chat.id, text = f'    <b>–ü—Ä–∏–≤–µ—Ç! –° –≤–∞–º–∏ –ú–∞—à–∞, –ü–æ–ª–∏–Ω–∞ –∏ –°–∞—à–∞üåü</b>\t \n\n ‚Ä¢–ú—ã —Å–æ–∑–¥–∞–ª–∏ —ç—Ç–æ—Ç –±–æ—Ç, —á—Ç–æ–±—ã —É–ø—Ä–æ—Å—Ç–∏—Ç—å, —Å–¥–µ–ª–∞—Ç—å –≤–µ—Å–µ–ª–µ–µ –∏ —É–≤–ª–µ–∫–∞—Ç–µ–ª—å–Ω–µ–µ –ø—Ä–æ—Ü–µ—Å—Å –∏–∑—É—á–µ–Ω–∏—è —Ç–∞–∫–æ–≥–æ –Ω–µ–ø—Ä–æ—Å—Ç–æ–≥–æ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è, –∫–∞–∫ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏–µüíª \n‚Ä¢–° –Ω–∞—à–∏–º –±–æ—Ç–æ–º –≤—ã –Ω–µ —Ç–æ–ª—å–∫–æ –ø—Ä–æ—Ç–µ—Å—Ç–∏—Ä—É–µ—Ç–µ —Å–≤–æ–∏ –∑–Ω–∞–Ω–∏—è –∏ –ø—Ä–æ–≤–µ—Ä–∏—Ç–µ –∏—Ö –Ω–∞ –ø—Ä–∞–∫—Ç–∏–∫–µ, –Ω–æ –∏ —É–∑–Ω–∞—Ç—å –±–æ–ª—å—à–µ –Ω–æ–≤–æ–π –∏–Ω—Ç–µ—Ä–µ—Å–Ω–æ–π –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –º–∏—Ä–µ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è! \n\n\n <b>–Ω–µ–±–æ–ª—å—à–∞—è –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏—è:</b> \n\n <tg-spoiler>‚ô°‚ô° <b>–ß—Ç–æ –≤–∫–ª—é—á–∞–µ—Ç –≤ —Å–µ–±—è –±–æ—Ç?</b></tg-spoiler> \n\n - –ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω—ã–µ —Ç–µ—Å—Ç—ã –ø–æ —Ä–∞–∑–Ω—ã–º —Ç–µ–º–∞–º –ø—Ä–æ–≥—Ä–∞–º–∏–∏—Ä–æ–≤–∞–Ω–∏—è —Å –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å—é –≤—Å–ø–æ–º–Ω–∏—Ç—å —Ç–µ–æ—Ä–∏—é –ø–µ—Ä–µ–¥ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏–µ–º(–¥–ª—è —ç—Ç–æ–≥–æ –ø–æ—Å–ª–µ –Ω–∞–∂–∞—Ç–∏—è –∫–Ω–æ–ø–∫–∏ ¬´–í—ã–±—Ä–∞—Ç—å —Ç–µ—Å—Ç¬ª –≤—ã–±–µ—Ä–∏—Ç–µ ¬´<u>–û–∑–Ω–∞–∫–æ–º–∏—Ç—å—Å—è —Å —Ç–µ–æ—Ä–∏–µ–π</u>¬ª) \n - –¢–µ—Å—Ç—ã —Å –ø—Ä–∞–∫—Ç–∏—á–µ—Å–∫–∏–º–∏ –∑–∞–¥–∞–Ω–∏—è–º–∏ —Å –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å—é –ø–æ—Å–º–æ—Ç—Ä–µ—Ç—å –≤–∞—Ä–∏–∞–Ω—Ç—ã —Ä–µ—à–µ–Ω–∏—è –ø–æ—Å–ª–µ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏—è —Ç–µ—Å—Ç–∞(–¥–ª—è —ç—Ç–æ–≥–æ –ø–æ—Å–ª–µ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è –≤—ã–±–µ—Ä–∏—Ç–µ –∫–Ω–æ–ø–∫—É ¬´<u>–ü–æ—Å–º–æ—Ç—Ä–µ—Ç—å —Ä–µ—à–µ–Ω–∏–µ</u>¬ª) \n - –ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω—ã–µ –≤–∏–∫—Ç–æ—Ä–∏–Ω—ã –ø–æ —Ä–∞–∑–Ω—ã–º –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è–º –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è: –æ—Ç —Ç–µ–æ—Ä–µ—Ç–∏—á–µ—Å–∫–æ–≥–æ –º–∞—Ç–µ—Ä–∏–∞–ª–∞ –¥–æ –≤–∏–∫—Ç–æ—Ä–∏–Ω –Ω–∞ —Ç–µ–º—É ¬´–ò–Ω—Ç–µ—Ä–µ—Å–Ω—ã–µ —Ñ–∞–∫—Ç—ã –∏–∑ –º–∏—Ä–∞ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è¬ª \n\n <tg-spoiler>‚ô°‚ô° <b>–ï—Å—Ç—å –∏–¥–µ—è –ø–æ —É–ª—É—á—à–µ–Ω–∏—é –±–æ—Ç–∞ –∏–ª–∏ –∏–¥–µ–∏ –¥–ª—è –Ω–æ–≤—ã—Ö —Ç–µ—Å—Ç–æ–≤ –∏ –≤–∏–∫—Ç–æ—Ä–∏–Ω?</b></tg-spoiler> \n\n - –í—ã–±–∏—Ä–∞–π—Ç–µ –∫–Ω–