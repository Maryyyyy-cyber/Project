        victory_1(message)


@bot.callback_query_handler(func=lambda call: True)
def querty_handler(call):
    if call.data == '–≤–∏–∫—Ç–æ—Ä–∏–Ω—ã':
        button_1 = types.InlineKeyboardButton("–ò–Ω—Ç–µ—Ä–µ—Å–Ω—ã–µ —Ñ–∞–∫—Ç—ã –∏–∑ –º–∏—Ä–∞ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è", callback_data = '1')
        button_2 = types.InlineKeyboardButton("–ù–µ–æ–±—ã—á–Ω—ã–µ —è–∑—ã–∫–∏ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è(1)", callback_data = '2')
        button_3 = types.InlineKeyboardButton("–ù–µ–æ–±—ã—á–Ω—ã–µ —è–∑—ã–∫–∏ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è(2)", callback_data='–≤–∏–∫—Ç–æ—Ä–∏–Ω–∞ 3')
        button_4 = types.InlineKeyboardButton("–≤–∏–∫—Ç–æ—Ä–∏–Ω–∞ 4", callback_data='–≤–∏–∫—Ç–æ—Ä–∏–Ω–∞ 4')
        keyboard_2 = [[button_1, button_2, button_3, button_4]]
        markup_2 = types.InlineKeyboardMarkup(row_width=3)
        markup_2.add(button_1)
        markup_2.add(button_2)
        markup_2.add(button_3)
        markup_2.add(button_4)
        bot.send_message(call.message.chat.id, text = f"–≤–∏–∫—Ç–æ—Ä–∏–Ω—ã:", reply_markup=markup_2)
        bot.delete_message(call.message.chat.id, call.message.message_id)
    elif call.data == '—Ç–µ—Å—Ç—ã':
        bttn_1 = types.InlineKeyboardButton("—Ç–µ—Å—Ç 1",callback_data='—Ç–µ—Å—Ç1')
        bttn_2 = types.InlineKeyboardButton("—Ç–µ—Å—Ç 2", callback_data='—Ç–µ—Å—Ç2')
        bttn_3 = types.InlineKeyboardButton("—Ç–µ—Å—Ç 3", callback_data='—Ç–µ—Å—Ç3')
        bttn_4 = types.InlineKeyboardButton("—Ç–µ—Å—Ç 4", callback_data='—Ç–µ—Å—Ç4')
        keyboard_3 = [[bttn_1, bttn_2, bttn_3, bttn_4]]
        markup_3 = types.InlineKeyboardMarkup(row_width=3)
        markup_3.add(bttn_1)
        markup_3.add(bttn_2)
        markup_3.add(bttn_3)
        markup_3.add(bttn_4)
        bot.send_message(call.message.chat.id, text = f"—Ç–µ—Å—Ç—ã:", reply_markup=markup_3)
        bot.delete_message(call.message.chat.id, call.message.message_id)
    elif call.data == 'contacts':
        bot.send_message(call.message.chat.id, text = f'@Blood_Marryy')
    elif call.data == '1':
        bot.delete_message(call.message.chat.id, call.message.message_id)
        victory_1("start1", call.message.chat.id)
    elif call.data == 'A1' or call.data == 'B1' or call.data == 'C1':
        bot.delete_message(call.message.chat.id, call.message.message_id)
        victory_1(call.data, call.message.chat.id)
    #elif call.data == '2':
        #bot.delete_message(call.message.chat.id, call.message.message_id)
        #victory_2("start_2", call.message.chat.id)


