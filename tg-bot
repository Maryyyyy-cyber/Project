valueWon = ['0', '100', '200', '300', '500', '1.000', '1.500', '3.000', '5.000', '7.500', '15.000', '25.000','50.000', '100.000', '250.000', '1.000.000']
x1 = 0
x2 = 0

def victory_1(message, chat_id = None):
    global x1
    global check
    global score
    btn1 = types.InlineKeyboardButton("A1", callback_data='A1')
    btn2 = types.InlineKeyboardButton("B1", callback_data='B1')
    btn3 = types.InlineKeyboardButton("C1", callback_data='C1')
    keyboard_ans = [[btn1, btn2, btn3]]
    markup_ans = types.InlineKeyboardMarkup(row_width=3)
    markup_ans.add(btn1)
    markup_ans.add(btn2)
    markup_ans.add(btn3)
    if message == 'start1':
        ansr = 'start1'
        x1 = 0
        bot.send_message(chat_id, str(question_v1[x1]+'\n' + multi1[x1]+'\n' + multi2[x1]+'\n' + multi3[x1]+'\n'))
    elif (str.upper(message) == 'A1' or str.upper(message) == 'B1' or str.upper(message) == 'C1') and x1<14:
        if str.upper(message) == correctAnswer[x1]:
            bot.send_message(message.chat.id, '–ü—Ä–∞–≤–∏–ª—å–Ω–æ')
            x1+=1
            bot.send_message(chat_id, '–¢–µ–∫—É—â–∏–π —Å—á—ë—Ç' + str(valueWon[x1]))
            bot.send_message(chat_id, str(question_v1[x1] + '\n' + multi1[x1] + '\n' + multi2[x1]+'\n' + multi3[x1]+'\n'), reply_markup=markup_ans)
        else:
            bot.send_message(chat_id, '–Ω–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ. –ò–≥—Ä–∞ –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è –∑–∞–Ω–æ–≤–æ')
            btn = types.InlineKeyboardButton("–ó–∞–Ω–æ–≤–æ", callback_data='1')
            markup_1 = types.InlineKeyboardMarkup(row_width=3)
            markup_1.add(btn)
            bot.send_message(chat_id, '–ù–∞–∂–º–∏, —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å',reply_markup=markup_1)
    else:
        bot.send_message(chat_id, str(question_v1[x1]+'\n'+multi1[x1] + '\n' + multi2[x1] + '\n' + multi3[x1] + '\n'), reply_markup=markup_ans)

def victory_2(message, chat_id = None):
    global x2
    global check
    global score
    btn_1 = types.InlineKeyboardButton("A", callback_data='A2')
    btn_2 = types.InlineKeyboardButton("B", callback_data='B2')
    btn_3 = types.InlineKeyboardButton("C", callback_data='C2')
    keyboard_ans = [[btn_1, btn_2, btn_3]]
    markup_ans = types.InlineKeyboardMarkup(row_width=3)
    markup_ans.add(btn_1)
    markup_ans.add(btn_2)
    markup_ans.add(btn_3)
    if message == 'start_2':
        ansr = 'start_2'
        bot.send_message(chat_id, str(question_v2[x2]+'\n' + multi1_v2[x2]+'\n' + multi2_v2[x2]+'\n' + multi3_v2[x2]+'\n'))
    elif (str.upper(message.text) == 'A' or str.upper(message.text) == 'B' or str.upper(message.text) == 'C') and x2 < 14:
        if str.upper(message.text) == correctAnswer_v2[x2]:
            bot.send_message(message.chat.id, '–ü—Ä–∞–≤–∏–ª—å–Ω–æ')
            x2+=1
            bot.send_message(chat_id, '–¢–µ–∫—É—â–∏–π —Å—á—ë—Ç' + str(valueWon[x2]))
            bot.send_message(chat_id, str(question_v2[x2] + '\n' + multi1_v2[x1] + '\n' + multi2_v2[x2] + '\n' + multi3_v2[x2] + '\n'))
        else:
            bot.send_message(message.chat.id, '–Ω–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ. –ò–≥—Ä–∞ –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è –∑–∞–Ω–æ–≤–æ')
            bot.send_message(message.chat.id, '–û—Ç–ø—Ä–∞–≤—å 2, —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å')
    else:
        bot.send_message(message.chat.id, str(question_v2[x2] + '\n' + multi1_v2[x2] + '\n' + multi2_v2[x2] + '\n' + multi3_v2[x2] + '\n'))

bot.polling(none_stop=True, interval=0)
